@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset your password";
}

@if (Model.IsPasswordReset)
{
    <div class="alert alert-success" role="alert">
        <p>We have successfully reset your password.</p>
    </div>
}
else
{
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-3">
            <form asp-controller="User" asp-action="ResetPassword" method="post">
                <input asp-for="@Model.Token" value="@Model.Token" type="hidden" />
                <input asp-for="@Model.Email" value="@Model.Email" type="hidden" />

                <div class="form-group mb-2">
                    <label asp-for="@Model.Password" class="form-label-add-edit fw-bold">New password:</label>
                    <input asp-for="@Model.Password" class="form-control" required />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="@Model.ConfirmPassword" class="form-label-add-edit fw-bold">Confirm new password:</label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" required />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Reset password</button>
            </form>
        </div>
    </div>
}
