@model ProteinFlavorViewModel
@using static SportStyleOasis.Common.EntityValidationConstants.ProteinFlavor;

<form asp-controller="Flavor" asp-action="Add" method="post">
    <div class="form-group mb-2">
        <label asp-for="FlavorName" class="form-label-add-edit">Name</label>
        <input asp-for="FlavorName" class="form-control" required minlength="@ProteinFlavorNameMinLength" maxlength="@ProteinFlavorNameMaxLength" />
        <span asp-validation-for="FlavorName" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Quantity" class="form-label-add-edit">Name</label>
        <input asp-for="Quantity" class="form-control" required step="1" min="@ProteinFlavorMinQuantity" max="@ProteinFlavorMaxQuantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Protein Powder Flavor</button>
</form>