@model ProteinPowderViewModel

<style>
    .space {
        margin-left: 15px;
    }
</style>

<h1 class="text-center">@Model.Name</h1>

<div>
    <img src="~/images/@Model.Image" alt="@Model.Name Image">
</div>

<div>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Protein Powder Brand:</strong> @Model.ProteinPowderBrand</p>
    <p><strong>Weight in grams:</strong> @Model.Weight</p>
    <p><strong>Protein Type:</strong> @Model.TypeOfProtein</p>
    <p><strong>Availabe Protein Powder Flavors:</strong></p>
    <select class="form-control mb-2" id="proteinFlavors" name="ProteinFlavors" required>
        @foreach (var proteinPowderFlavor in Model.ProteinFlavors)
        {
            <option value="@proteinPowderFlavor.FlavorName">@proteinPowderFlavor.FlavorName</option>
        }
    </select>

    <p><strong>Ratings:</strong></p>
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        <ul>
            @foreach (var review in Model.Reviews)
            {
                <li>Rating: @review.Rating, Comment: @review.Comment, CreatedAt: @review.CreatedAt, UserName: @review.UserName</li>
            }
        </ul>
    }
    else
    {
        <p>No ratings yet.</p>
    }

    <form asp-controller="ProteinPowder" asp-action="AddRating" method="post">
        <input type="hidden" name="ProteinPowderId" value="@Model.Id" />
        <label for="rating">Rating:</label>
        <select name="rating" id="rating" required>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br />
        <label for="comment">Comment:</label>
        <textarea name="comment" id="comment" class="mb-2"></textarea>
        <br />
        <input type="submit" value="Submit Rating" class="btn btn-primary mb-2" />
    </form>
</div>

<div class="d-flex align-items-center">
    <a asp-controller="ProteinPowder" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <form asp-controller="ProteinPowder" asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger space" onclick="return confirm('Are you sure you want to delete this Protein Powder: @Model.Name')" />
    </form>
    <a asp-controller="Flavor" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-primary space">Add flavor</a>
</div>