@model IEnumerable<AllProteinPowderViewModel>

@{
    TempData["Title"] = "Here you can see all our protein powders";
}

<style>
    img {
        cursor: pointer;
    }
</style>

<h1 class="text-center">@TempData["Title"]</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proteinPowder in Model)
        {
            <tr>
                <td>@proteinPowder.Name</td>
                <td>@proteinPowder.ProteinPowderBrand</td>
                <td>@proteinPowder.Price</td>
                <td><img src="~/images/@proteinPowder.Image" alt="Product Image" width="100" height="100" onclick="openProtein(@proteinPowder.Id)" /></td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        function openProtein(proteinId) {
            var url = '/ProteinPowder/ViewProteinPowder/' + proteinId;

            window.location.href = url;
        }
    </script>
}