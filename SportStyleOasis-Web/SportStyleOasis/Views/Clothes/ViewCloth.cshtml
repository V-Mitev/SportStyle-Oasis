@model ClothViewModel

<style>
    .space {
        margin-left: 15px;
    }
</style>

<h1 class="text-center">@Model.Name</h1>

<div>
    <img src="~/images/@Model.Image" alt="@Model.Name Image">
</div>

<div>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Clothe Brand:</strong> @Model.GarmentBrand</p>
    <p><strong>Gender:</strong> @Model.GarmentForGender</p>
    <p><strong>Type of Clothes:</strong> @Model.GarmentType</p>
    <p><strong>Availabe Clothe Size:</strong></p>
    <select class="form-control mb-2" id="garmentBrand" name="GarmentBrand" required>
        @foreach (var clothInventory in Model.ClothInventory)
        {
            @if (clothInventory.AvailableQuantity > 0)
            {
                <option value="@clothInventory.ClothesSize">@clothInventory.ClothesSize</option>
            }
        }
    </select>
</div>

<div class="d-flex align-items-center">
    <a asp-controller="Clothes" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <form asp-controller="Clothes" asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger space" onclick="return confirm('Are you sure you want to delete this garment: @Model.Name')" />
    </form>
</div>