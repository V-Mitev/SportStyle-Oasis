@model IEnumerable<AllClothesModel>

<style>
    .card-img-container {
        width: 200px;
        height: 200px;
        cursor: pointer;
    }

    .card-img-container img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }
    
    .space {
        margin-left: 15px;
    }
</style>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/images/@item.Image" class="card-img-container" alt="@item.Name Image" onclick="openCloth(@item.Id)">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p><strong>Price:</strong> $@item.Price</p>
                    <div class="d-flex align-items-center">
                        <a asp-controller="Clothes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <form asp-controller="Clothes" asp-action="Delete" asp-route-id="@item.Id">
                            <input type="submit" value="Delete" class="btn btn-danger space" onclick="return confirm('Are you sure you want to delete this garment: @item.Name')" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script>
        function openCloth(itemId) {
            var url = '/Home/Privacy';

            window.location.href = url;
        }
    </script>
}