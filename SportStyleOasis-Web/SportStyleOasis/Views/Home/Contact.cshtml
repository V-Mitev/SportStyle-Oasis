@model ContactViewModel

<style>
    #map {
        height: 400px;
        width: 500px;
    }

    .contact.form {
        display: inline-block;
    }
</style>

<div class="col-sm-6">
    <h2 class="text-center">Contact Form</h2>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="contact-form">
            <form asp-controller="Home" asp-action="Contact" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="form-label-add-edit">Name</label>
                    <input asp-for="Name" class="form-control" required placeholder="Your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label-add-edit">Email</label>
                    <input asp-for="Email" class="form-control" required placeholder="Your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Message" class="form-label-add-edit">Message</label>
                    <textarea asp-for="Message" class="form-control" required rows="3" placeholder="Your message to us"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
            </form>
        </div>
    </div>

    <div id="map"></div>
</div>

<script>
    let map;

    async function initMap() {
        const position = { lat: 42.651810, lng: 23.350520 };

        const { Map } = await google.maps.importLibrary("maps");
        const { AdvancedMarkerElement } = await google.maps.importLibrary("marker");

        map = new Map(document.getElementById("map"), {
            zoom: 15,
            center: position,
            mapId: "DEMO_MAP_ID",
        });

        const marker = new AdvancedMarkerElement({
            map: map,
            position: position,
            title: "Uluru",
        });
    }
</script>

<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDYExPLlbJnoXZxJnVinhgl3dYq7fbrN54&callback=initMap&loading=async">
</script>
